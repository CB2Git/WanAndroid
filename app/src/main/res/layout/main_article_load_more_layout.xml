<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_load_more"
    android:layout_width="match_parent"
    android:layout_height="@dimen/article_load_more_height"
    android:gravity="center"
    android:orientation="horizontal">

    <ProgressBar
        android:id="@+id/load_more_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/article_load_more_progress_height"
        android:layout_height="@dimen/article_load_more_progress_height"/>

    <TextView
        android:id="@+id/load_more_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_m"/>

</LinearLayout>